<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- 앱바 스타일 -->
    <style name="AppBarStyle" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
    </style>

    <!--  툴바 스타일  -->
    <style name="ToolbarStyle" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="ThemeOverlay.App.Toolbar" parent="">
        <item name="colorPrimary">@color/white</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
    </style>

    <!-- 검색창 스타일 -->
    <style name="ThemeOverlay.App.TextInputEditText" parent="">
        <item name="boxCornerRadiusTopStart">6dp</item>
        <item name="boxCornerRadiusTopEnd">6dp</item>
        <item name="boxCornerRadiusBottomStart">6dp</item>
        <item name="boxCornerRadiusBottomEnd">6dp</item>

        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorControlActivated">@color/black</item>

        <item name="hintEnabled">false</item>
        <item name="startIconDrawable">@drawable/ic_baseline_search_24</item>
        <item name="endIconMode">clear_text</item>
    </style>

    <!--  BottomSheet  -->
    <style name="ModalBottomSheetDialog" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearance">@style/ShapeAppearance.App.LargeComponent</item>
    </style>

    <style name="ShapeAppearance.App.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <!--  카테고리 토글버튼 스타일  -->
    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">40dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="ThemeOverlay.App.Location.Category.Hospital" parent="">
        <item name="colorPrimary">@color/color_category_hospital</item>
    </style>
    <style name="ThemeOverlay.App.Location.Category.Pharmacy" parent="">
        <item name="colorPrimary">@color/color_category_pharmacy</item>
    </style>
    <style name="ThemeOverlay.App.Location.Category.GasStation" parent="">
        <item name="colorPrimary">@color/color_category_gas_station</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.IconOnly.Hospital" parent="Widget.App.Button.OutlinedButton.IconOnly">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Location.Category.Hospital</item>
    </style>
    <style name="Widget.App.Button.OutlinedButton.IconOnly.Pharmacy" parent="Widget.App.Button.OutlinedButton.IconOnly">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Location.Category.Pharmacy</item>
    </style>
    <style name="Widget.App.Button.OutlinedButton.IconOnly.GasStation" parent="Widget.App.Button.OutlinedButton.IconOnly">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Location.Category.GasStation</item>
    </style>
</resources>